{
  "compilerOptions": {
    "lib": ["ES2018"],
    "allowJs": false,
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "rootDir": "src"
}
